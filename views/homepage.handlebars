<ol class="post-list">
    <li>
        <article class="post">
            <div class="title">
                <a href="{{title}}" target="_blank">{{title}}</a>
                <span>({{post_text}})</span>
            </div>
            <div class="meta">
                By {{user.username}} on
                {{created_at}}
                |
                <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
</ol>