<article class="card w-85">
    <div class="card-body">
        <a href="{{post.title}}" target="_blank" class="card-title">{{post.title}}</a>
        <span class="card-text">({{post.post_text}})</span>
        <div class="card-text">
            By {{post.user.username}} on
            {{post.created_at}}
            |
            <a href="/post/{{post.id}}" class="btn btn-info btn-sm">{{post.comments.length}} comment(s)</a>
        </div>
    </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit" class="btn btn-info btn-sm">add comment</button>
    </div>
</form>

<div class="comments">
    {{#each post.comments}}
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>